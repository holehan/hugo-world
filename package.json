{
  "name": "hugo-world",
  "version": "1.0.0",
  "description": "Hugo starter with rollup, tailwind and more",
  "main": "index.js",
  "repository": "https://github.com/holehan/hugo-world",
  "author": "Florian Gr√§ssle",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s clean build-rollup build-hugo",
    "build-hugo": "hugo --gc --minify",
    "build-rollup": "rollup -c",
    "clean": "rimraf public",
    "serve-hugo": "wait-on assets/css/main.css && hugo server -b http://$(hostname)/ --bind 0.0.0.0",
    "watch-rollup": "rollup -c -w",
    "watch": "cross-env NODE_ENV=development npm run clean && run-p watch-rollup serve-hugo"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.2",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.1.1",
    "prettier": "^2.0.5",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "rollup-plugin-postcss": "^3.1.2",
    "stylelint": "^13.6.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "^1.1.2",
    "wait-on": "^5.0.1"
  }
}
