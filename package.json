{
  "name": "hugo-world",
  "version": "1.0.0",
  "description": "Hugo starter with rollup, tailwind and more",
  "main": "index.js",
  "repository": "https://github.com/holehan/hugo-world",
  "author": "Florian Gr√§ssle",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean build-rollup build-hugo",
    "build-hugo": "hugo --gc --minify",
    "build-rollup": "rollup -c",
    "clean": "rimraf public",
    "serve-hugo": "wait-on assets/css/main.css && hugo server -b http://$(hostname)/ --bind 0.0.0.0",
    "watch-rollup": "rollup -c -w",
    "watch": "npm run clean && run-p watch-rollup serve-hugo"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.2",
    "rollup-plugin-postcss": "^2.0.3",
    "stylelint": "^10.1.0",
    "stylelint-config-idiomatic-order": "^7.0.3",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.10.1",
    "tailwindcss": "^1.1.2",
    "wait-on": "^3.3.0"
  }
}
