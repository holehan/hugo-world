{
  "extends": [
    "stylelint-config-idiomatic-order",
    "stylelint-config-recommended-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "define-mixin",
          "screen",
          "responsive"
        ]
      }
    ],
    "unit-no-unknown": [
      true,
      {
        "ignoreUnits": [
          "mlh",
          "vru",
          "mfs"
        ]
      }
    ]
  }
}
